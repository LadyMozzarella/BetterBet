<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
  <%= f.label :email %>
  <%= f.text_field :email, :required => true %>
  <%= f.label :password %>
  <%= f.password_field :password, :required => true  %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true  %>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.submit %>
<% end %>