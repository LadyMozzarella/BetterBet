<div class="new-user-form">
  <div class="errors"></div>
  <div class="facebook_signup">
    <%= link_to "Sign up with Facebook", "/auth/facebook", class: "facebook_signup_link" %>
  </div>
  <h1>Create an account</h1>
  <%= render 'shared/flash_errors' %>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
    <%= f.label :email %>
    <%= f.text_field :email, :required => true %>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true  %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true  %>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <div class="gravatar_form_block">
      <%= f.label :use_gravatar %>
      <%= f.check_box :image %>
    </div>
    <%= render "shared/credit_card" %>
    <%= f.submit %>
  <% end %>
</div>

