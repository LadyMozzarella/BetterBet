<%= form_for goal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :bet %>
  <%= f.text_field :bet_amount %>
  <%= f.label :start_date %>
  <%= f.date_select :start_date, :required => true %>
  <%= f.label :end_date %>
  <%= f.date_select :end_date, :required => true %>
  <%= f.label :buddy %>
  <%= f.collection_select :buddy_id, current_user.friends, :id, :name %>
  <%= f.submit %>
<% end %>