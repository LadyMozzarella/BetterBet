<%= form_for goal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :bet, "Bet (in $)" %>
  <%= f.number_field :bet_amount, min: 0 %>
  <%= f.label :start_date %>
  <%= f.date_select :start_date, :required => true, :order => [:month, :day, :year]  %>
  <%= f.label :end_date %>
  <%= f.date_select :end_date, :required => true, :order => [:month, :day, :year] %>
  <% if current_user.has_friends? %>
    <%= f.label :buddy %>
    <%= f.collection_select :buddy_id, current_user.get_buddies, :id, :name %>
  <% else %>
    (None)
  <% end %>
  <%= f.submit class: 'submit' %>
<% end %>
