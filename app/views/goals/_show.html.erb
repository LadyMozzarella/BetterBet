<article class="goal goal-state_ongoing" data-id = "<%= goal.id %>">
  <header class="goal_header">
    <h2><%= goal.title %></h2>
    <% if goal.belongs_to(current_user) %>
      <ul class="goal_edit_buttons">

        <% if goal.belongs_to(current_user) %>
          <li class="goal_complete_button">
            <%= link_to image_tag('check-square-o.svg'), complete_goal_path(goal), method: 'put' %>
          </li>
        <% end %>
        
        <li class="goal_edit-button">
          <%= link_to image_tag('pencil.svg'), edit_goal_path(goal) %>
        </li>
        <li>
          <%= link_to image_tag('times.svg'), goal_path(goal), method: :delete, class: "goal_delete-button" %>
        </li>
      </ul>
    <% end %>
  </header>

  <p class="goal_description"><%= goal.description %></p>

   <div class="goal_money_box">
    <p class="goal_label">
      You are betting:
      <h3 class="goal_money">$<%= goal.bet_amount %></h3>
    </p>
  </div>

  <div class="goal_date_box">
    <p class="goal_label">
      Countdown:
      <h3 class="goal_date"><%= format_days(goal.countdown) %> days</h3>
    </p>
  </div>

  <% if goal.buddy %>
    <p class="goal_label">
      Against:
    </p>
  <div class="goal_buddy_box">
    <% if goal.buddy.image %>
      <img src="<%= goal.buddy.image %>" alt="placeholder" class="goal_buddy_image">
    <% end %>
    <h3 class="goal_buddy"><%= link_to goal.buddy.name, user_path(goal.buddy) %></h3>
  </div>
  <% end %>
</article>