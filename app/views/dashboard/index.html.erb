<%= render 'shared/alerts' %>
<%= render 'shared/confirmations' %>
<div id="page">
  <section class="missing_bank_account">
    <% if !current_user.has_bank_info? %>
      <%= link_to "Your profile is incomplete, click here to link a Bank Account", new_recipient_path, class: "bank_account_missing_notice" %>
    <% end %>
  </section>

  <section id="create-goal">
    <%= link_to "Create a new goal", new_goal_path, class: "create-goal_submit_button" %>
  </section>

  <section class="ongoing-goals">
    <h2 class="goals_header">Ongoing Goals</h2>
    <% @goals.each do |goal| %>
      <%= render 'goals/show', goal: goal %>
    <% end %>
  </section>

  <%= render 'shared/friend_search' %>
  <%= render 'friendships/index' %>

</div>