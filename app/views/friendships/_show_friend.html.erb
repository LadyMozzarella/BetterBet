<% goals.each do |goal| %>
  <article class="friends-timeline_friend-activity">
  <img src="/assets/default_user_image.svg" alt="placeholder" class="friends-timeline_buddy_image">
  <p class="friends-timeline_action">
    <h4 class="friends-timeline_buddy-name">
      <%= name %>
    </h4>
    <%= goal.title %><br>
    <%= format_days(goal.countdown) %> days remaining
  </p>
  </article>
<% end %>