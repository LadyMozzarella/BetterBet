<div id="goal-alert" class="reveal-modal" data-reveal>
  <h2>Hello, <%= current_user.name %>!</h2>
  <p class="lead">Time's up! Have you completed this goal?</p>
  <div class="goal"></div>
  <div class="goal-confirmation">
    <button class="goal-complete">Yes</button>
    <button class="goal-incomplete">No</button>
  </div>
  <a class="close-reveal-modal">&#215;</a>
</div>


 <div id="page">

    <section id="create-goal">
      <%= link_to "Create a new goal", new_goal_path, class: "create-goal_submit_button" %>
    </section>

    <section class="ongoing-goals">
      <h2 class="goals_header">Ongoing Goals</h2>
      <% current_user.goals.each do |goal| %>
        <%= render partial: 'shared/goal', :locals => {:goal => goal} %>
      <% end %>
    </section>

    <%= render partial: '/shared/search' %>

    <section class="friends-timeline">
      <h2 class="friends-timeline_header">Friends Timeline</h2>
        <% @friends.each do |name, goals| %>
            <% goals.each do |goal| %>
              <article class="friends-timeline_friend-activity">
              <img src="/assets/default_user_image.svg" alt="placeholder" class="friends-timeline_buddy_image">
                <p class="friends-timeline_action">
                  <h4 class="friends-timeline_buddy-name">
                    <%= name %>
                  </h4>
                  <%= goal.title %><br>
                  <%= format_days(goal.countdown) %> days remaining
                </p>
              </article>
            <% end %>
          <% end %>
    </section>

    <section class="friend_list">
      <h1>4.Friend List</h1>
    </section>
    <section class="past_goals">
      <h1>5.Past Goals</h1>
    </section>
  </div>